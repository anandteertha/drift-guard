{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts", "src/jest-globals.d.ts"],
  "exclude": ["cypress/**/*", "**/*.e2e-spec.ts"]
}

